<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ButtonWithListener"
    android:orientation="vertical">

    <Button
        android:id="@+id/buttonID01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:padding="15dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/click_here_01"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/buttonID02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:padding="15dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/click_here_02"
        android:textAllCaps="false"/>

    <androidx.appcompat.widget.AppCompatButton
        android:onClick="xmlButton"
        android:id="@+id/buttonID03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:padding="15dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/radius_btn3bl_0_tr_0"
        android:text="@string/click_here_03"
        android:textAllCaps="false"/>

    <TextView
        android:id="@+id/btnResultID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/btn_result"
        android:textSize="20sp"/>


</LinearLayout>