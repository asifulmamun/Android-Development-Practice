<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".25"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:paddingVertical="15dp"
            android:paddingHorizontal="30dp"
            android:background="#E40B0B"
            android:text="Red"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="30sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:layout_height="wrap_content"
            android:paddingVertical="15dp"
            android:paddingHorizontal="30dp"
            android:background="#4CAF50"
            android:text="Green"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="30sp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".25"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="10sp"
            android:layout_weight=".50"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:paddingVertical="15dp"
            android:paddingHorizontal="30dp"
            android:background="#3F51B5"
            android:text="Blue"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="30sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:layout_height="wrap_content"
            android:paddingVertical="15dp"
            android:paddingHorizontal="30dp"
            android:background="#FFEB3B"
            android:text="Yellow"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="30sp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".25"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:paddingVertical="15dp"
            android:paddingHorizontal="30dp"
            android:background="#F15858"
            android:text="Light Red"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="30sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:layout_height="wrap_content"
            android:paddingVertical="15dp"
            android:paddingHorizontal="30dp"
            android:background="#8AEC8E"
            android:text="Light Green"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="30sp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".25"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:paddingVertical="15dp"
            android:paddingHorizontal="30dp"
            android:background="#6C7CD6"
            android:text="Light Blue"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="30sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:layout_height="wrap_content"
            android:paddingVertical="15dp"
            android:paddingHorizontal="30dp"
            android:background="#ECDF6C"
            android:text="Light Yellow"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="30sp" />


    </LinearLayout>



</LinearLayout>